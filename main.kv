BoxLayout:
    orientation: "vertical"
    padding: 20
    spacing: 10

    Label:
        text: "Create a FastAPI Project"
        font_size: 24

    TextInput:
        id: project_name
        hint_text: "Enter project name"
        multiline: False
        size_hint_y: None
        height: 40

    Button:
        text: "Generate Project"
        size_hint_y: None
        height: 50
        on_press: app.generate_project(project_name.text)

    Label:
        id: status_label
        text: ""
        size_hint_y: None
        height: 30
        color: (0, 1, 0, 1)  # Green for success
